<?xml version="1.0"?>
<robot name="robot" xmlns:xacro="http://www.ros.org/wiki/xacro" >

  <material name="white">
      <color rgba="1 1 1 1" />
  </material>

  <material name="orange">
      <color rgba="1 0.3 0.1 1"/>
  </material>

  <material name="blue">
      <color rgba="0.2 0.2 1 1"/>
  </material>

  <material name="black">
      <color rgba="0 0 0 1"/>
  </material>


  <!-- BASE_FOOTPRINT LINK -->

  <link name="base_footprint">
  </link>

  <joint name="base_footprint_joint" type="fixed">
      <parent link="base_footprint"/>
      <child link="base_link"/>
      <origin xyz="0 0 0.0725" rpy="0 0 0"/>
  </joint>

  <!-- BASE LINK -->

  <link name="base_link">
      <visual>
          <origin xyz="0 0 0"/>
          <geometry>
              <cylinder length="0.08" radius="0.125"/>
          </geometry>
          <material name="orange"/>
      </visual>
      <collision>
          <origin xyz="0 0 0"/>
          <geometry>
              <cylinder length="0.08" radius="0.125"/>
          </geometry>
      </collision>
  </link>


  <!-- LIDAR -->

  <joint name="lidar_joint" type="fixed">
      <parent link="base_link"/>
      <child link="laser"/>
      <origin xyz="0.0 0.0 0.11" rpy="0 0 0"/>
  </joint>

  <link name="laser">
      <visual>
          <origin xyz="0 0 0"/>
          <geometry>
              <cylinder length="0.040" radius="0.0375"/>
          </geometry>
          <material name="white"/>
      </visual>
      <collision>
          <origin xyz="0 0 0"/>
          <geometry>
              <cylinder length="0.040" radius="0.0375"/>
          </geometry>
      </collision>
  </link>

</robot>
